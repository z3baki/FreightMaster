<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:text="Quien eres tu?"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonTruckDrive"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="LoginTruckDrive"
            android:text="Camionero" />

        <Button
            android:id="@+id/buttonOwner"
            android:layout_width="18dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:onClick="LoginOwner"
            android:text="DueÃ±o de flota" />

        <Button
            android:id="@+id/buttonPrivateUser"
            android:layout_width="18dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:onClick="LoginPrivateUser"
            android:text="Usuario particular" />


    </LinearLayout>
</RelativeLayout>